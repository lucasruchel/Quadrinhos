<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
  
    <application>
        <resource-bundle>
            <base-name>resources.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>resources.links</base-name>
            <var>links</var>
        </resource-bundle>
    </application>

    <!-- pages navigations rules -->
    <navigation-rule>
        <from-view-id>/users/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inserted</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.html</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inserted</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logado</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/users/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>

    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cancelar</from-outcome>
            <to-view-id>/login/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/admin/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deletado</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>editar</from-outcome>
            <to-view-id>/quadrinhos/adicionar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>nvoquadrinho</from-outcome>
            <to-view-id>/quadrinhos/adicionar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>visualiarClientes</from-outcome>
            <to-view-id>/users/apresentaCliente.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/quadrinhos/adicionar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cadastrado</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <if>#{autenticacaoBean.usuarioLogado.adm}</if>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <if>#{!autenticacaoBean.usuarioLogado.adm}</if>
            <to-view-id>/users/index.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>

</faces-config>